{
  "name": "sih",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "concurrently \"npm run start-backend\" \"npm run start-frontend\"",
    "start-backend": "cd backend && uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "start-frontend": "wait-on tcp:8000 && cd frontend && npm start"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "wait-on": "^9.0.1"
  }
}
